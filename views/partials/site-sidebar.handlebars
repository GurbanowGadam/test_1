<aside id="aside" class="col-md-4">

	<div class="widget">
		<div class="widget-search">
			<form action="/posts/search" method="get">
			<input class="search-input form-control" type="text" name="search" placeholder="Search">
			<button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
		</form>
		</div>
	</div>
	<!-- /Search -->
	<div class="widget">
		<h3 class="mb-3">Categories</h3>
		{{#each categori}}
		<div class="widget-category">
			<a href="/posts/categori/{{_id}}">{{name}}<span>{{num_of_posts}}</span></a>
		</div>
		{{/each}}
	</div>

	<!-- Posts sidebar -->
	<div class="widget">
		<h3 class="mb-3">Latest Posts</h3>
    {{#each (limit posts 3)}}
		<!-- single post -->
		<div class="widget-post">
			<a href="#">
				<img class="img-fluid" src="/{{post_name}}" alt="">{{title}}
			</a>
			<ul class="blog-meta">
				<li>{{genereteDate date 'MMM DD YYYY'}}</li>
			</ul>
		</div>
		<!-- /single post -->
    {{/each}}

	</div>
	<!-- /Posts sidebar -->

</aside>

<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
	{{#paginate current = current pages = pages}}
